<section class="movie-form">
  <%= form_for(@category, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
    <div class="form-group">
      <div class="col-md-2 movie-form__label-container">
        <%= f.label :name, class: 'control-lab' %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter the category name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
</section>
