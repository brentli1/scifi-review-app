<div class="row review-form">
  <%= form_for(@review, html: { class: 'form-horizontal review-form__form', role: 'form' }) do |f| %>
    <%= f.hidden_field :movie_id, value: (@review.movie_id || @movie.id) %>
    <div class="form-group">
      <%= f.label :rating %>
      <%= f.select(:rating, options_for_select(0..5, @review.rating), {}, {class: 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.label :review_body %>
      <%= f.text_area :review_body, class: 'form-control' %>
    </div>
    <div class="form-group">
      <div class="col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
</div>
