<%= render 'shared/errors', obj: @movie %>

<section class="movie-form">
  <%= form_for(@movie, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
    <div class="form-group">
      <div class="col-md-2 movie-form__label-container">
        <%= f.label :title, class: 'control-lab' %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter the movie title" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2 movie-form__label-container">
        <%= f.label :release_date, class: 'control-lab' %>
      </div>
      <div class="col-md-10">
        <%= f.date_field :release_date, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2 movie-form__label-container">
        <%= f.label :synopsis, class: 'control-lab' %>
      </div>
      <div class="col-md-10">
        <%= f.text_area :synopsis, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
</section>
