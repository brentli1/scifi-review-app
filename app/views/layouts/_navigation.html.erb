<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    
    <%= link_to 'SciFiReviewEmp', root_path, class: 'navbar-brand' %>

    <div class="navbar-collapse collapse navbar-responsive-collapse navbar-flex">
      <% if current_user %>
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Movies <%= icon('caret-down') %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'View All Movies', movies_path %>
                <%= link_to 'Create Movie', new_movie_path %>
              </li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-right">
          <li class="navbar-right__item dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= icon('user') %>
              <% if current_user.admin? %>
                <%= icon('unlock-alt') %>
              <% end %>
              <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
              <%= icon('caret-down') %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'View Profile', user_path(current_user) %>
                <%= link_to 'Edit Profile', edit_user_registration_path(current_user) %>
              </li>
            </ul>
          </li class="navbar-right__item">
          <%= link_to('Logout', destroy_user_session_path, class: 'btn btn-xs btn-danger', 
                                                           title: 'Logout', 
                                                           method: :delete) %>
        </div>
      <% else %>
        <ul class="nav navbar-right">
          <li class="navbar-right__item">
            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-xs btn-primary' %>
          </li>
          <li class="navbar-right__item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-xs btn-primary' %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
